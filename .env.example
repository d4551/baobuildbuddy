# AI Provider API Keys (optional — can also be set via Settings UI)
GEMINI_API_KEY=
OPENAI_API_KEY=
CLAUDE_API_KEY=
HUGGINGFACE_TOKEN=

# Local model inference (RamaLama / Ollama)
LOCAL_MODEL_ENDPOINT=http://localhost:8080/v1
LOCAL_MODEL_NAME=

# Server
PORT=3000
HOST=0.0.0.0
DB_PATH=~/.bao/bao.db
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
# Set to true or 1 to disable API key auth (local dev only)
BAO_DISABLE_AUTH=

# Client (Nuxt)
# API base URL — use / for same-origin with Nitro proxy, or http://localhost:3000 when client runs separately
NUXT_PUBLIC_API_BASE=/
NUXT_PUBLIC_WS_BASE=/
# Dev proxy target — e.g. http://localhost:3000 to proxy /api to server during local dev
NUXT_PUBLIC_API_PROXY=
NUXT_PUBLIC_QUERY_STALE_TIME_MS=60000
NUXT_PUBLIC_QUERY_RETRY_COUNT=1
NUXT_PUBLIC_QUERY_REFETCH_ON_FOCUS=true
NUXT_PUBLIC_APP_TITLE=BaoBuildBuddy - AI Career Assistant
NUXT_PUBLIC_APP_DESCRIPTION=AI-powered career assistant for the video game industry
NUXT_PUBLIC_I18N_DEFAULT_LOCALE=en-US
NUXT_PUBLIC_I18N_FALLBACK_LOCALE=en-US
NUXT_PUBLIC_I18N_SUPPORTED_LOCALES=en-US
NUXT_PUBLIC_I18N_LOCALE_COOKIE_KEY=bao-locale
